<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".StartScreenActivity">

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/background"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/scrollView2" />

    <ScrollView
        android:id="@+id/scrollView2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingLeft="12dp"
        android:paddingRight="12dp"
        android:paddingBottom="5dp"
        tools:layout_editor_absoluteX="411dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/logoPlaceholder4"
                android:layout_width="200dp"
                android:layout_height="130dp"
                android:layout_gravity="center"
                android:background="@drawable/logo_straight" />

            <TextView
                android:id="@+id/textView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:baselineAligned="false"
                android:text="Kumusta!"
                android:textAlignment="center"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/txtvName"
                android:layout_width="match_parent"
                android:layout_height="54dp"
                android:text="(NAME OF FARMER/TRAINER)"
                android:textAlignment="center"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/textView3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Maligayang pagdating! Ang layunin ng application na ito ay para maging gabay at supplemento sa inyong pag-aaral ukol sa mga kakayahang pagsasaka, tulad ng pagtatanim ng ibaâ€™t ibang klaseng halaman.    Pindutin ang susunod upang pumunta sa unang bahagi."
                android:textAllCaps="false"
                android:textIsSelectable="false"
                android:textSize="24sp" />

            <ImageButton
                android:id="@+id/startBtn2"
                android:layout_width="230dp"
                android:layout_height="91dp"
                android:layout_gravity="center"
                android:layout_marginTop="25dp"
                android:background="@drawable/magsimula"
                tools:ignore="SpeakableTextPresentCheck" />
        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>