<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/txtvFarmerTaskName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="23dp"
        android:layout_toStartOf="@id/btnUploadTask"
        android:text="Task name"
        android:textSize="20sp"
        android:textStyle="bold" />

    <ImageButton
        android:id="@+id/btnUploadTask"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:layout_alignBottom="@id/txtvSubmittedAt"
        android:layout_alignParentRight="true"
        android:layout_marginRight="8dp"
        android:background="@android:drawable/ic_menu_camera"
        android:backgroundTint="#AB8759" />

    <TextView
        android:id="@+id/txtvFarmerTaskCreatedAt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/txtvFarmerTaskName"
        android:text="Date"
        android:textStyle="italic" />

    <TextView
        android:id="@+id/txtvSubmittedAt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/txtvFarmerTaskCreatedAt"
        android:layout_alignLeft="@id/txtvFarmerTaskCreatedAt"
        android:text="Submitted At:"
        android:textStyle="italic" />

</RelativeLayout>